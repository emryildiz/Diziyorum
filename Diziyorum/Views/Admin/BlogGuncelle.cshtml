@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Diziyorum.Models.KategorilerTurler

@using (Html.BeginForm("BlogGuncelle", "Admin", new { @class = "bg-light p-5 contact-form" }))
{
    DiziYorumEntities db = new DiziYorumEntities();

    int y = int.Parse(Request.QueryString["BLOGID"]);

    var blog = db.TBLBLOG.Find(y);

    <div style="width:60%; position:absolute; left:200px">
        <div class="form-group">
            @Html.TextBox("baslik", blog.BLOGBASLIK, new { @class = "form-control", @placeholder = "BLOG BAŞLIĞI", autocomplete = "off" })
        </div>

        <div class="form-group">
            @Html.TextBox("gorsel", blog.BLOGGORSEL, new { @class = "form-control", @placeholder = "BLOG GÖRSELİ", autocomplete = "off" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.selectedKategoriId, Model.kategoriler, "Kategori Seçiniz", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.selectedTurId, Model.turler, "Tür Seçiniz", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.TextArea("icerik", blog.BLOGICERIK, htmlAttributes: new { @class = "form-control", @placeholder = "İÇERİK", @rows = 10, @cols = 100 })
        </div>
    </div>
    @Html.TextBox("id",y, new { @class = "form-control", autocomplete = "off",style="display:none" })
    <div class="form-group" style="position:absolute; bottom:120px; left:200px;">
        <input type="submit" value="Gönder" class="btn btn-primary py-3 px-5" style=" width: 100px">
    </div>

}