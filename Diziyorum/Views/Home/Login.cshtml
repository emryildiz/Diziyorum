@{
    Layout = null;




}

@model Diziyorum.TBLKULLANICI
<!doctype html>
<html lang="en">
<head>
    <title>Diziyorum Giriş</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/login/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Giriş Yap</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>
                        <h3 class="text-center mb-4">Diziyorum</h3>






                        <label style="color:red; font-size:12px; position:center">@ViewBag.Mesaj</label>

                        



                        @using (Html.BeginForm("Login", "Home", new { @class = "login-form" }))
                        {


                            <div class="form-group">

                                @Html.TextBoxFor(m => m.KULLANICIADI, new { @class = "form-control rounded-left", @placeholder = "Kullanıcı Adı", @required = "required", autocomplete = "off" })
                            </div>
                            <div class="form-group d-flex">

                                @Html.PasswordFor(m => m.SIFRE, new { @class = "form-control rounded-left", @placeholder = "Şifre", @required = "required" })
                            </div>
                            <div class="form-group">
                               
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Giriş Yap</button>




                            </div>
                            <div class="form-group d-md-flex">

                                <div class="w-50 text-md-right">
                                    <a href="Register">Üye değil misin?</a>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/login/jquery.min.js"></script>
    <script src="~/login/popper.js"></script>
    <script src="~/login/js/bootstrap.min.js"></script>
    <script src="~/login//main.js"></script>

</body>
</html>


